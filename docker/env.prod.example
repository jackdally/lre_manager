# Production Environment Configuration
# Copy this file to .env.prod and update with your actual values

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=lre_manager

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_make_it_long_and_random
JWT_EXPIRATION=24h

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info
FRONTEND_URL=http://localhost:3000

# API Configuration
REACT_APP_API_URL=http://localhost:4000/api
REACT_APP_DOCS_URL=http://localhost:3001/lre_manager/docs/intro

# Security
CORS_ORIGIN=http://localhost:3000

# Optional: Redis Configuration (if using Redis)
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password_here

# Optional: External Services
# NETSUTE_CLIENT_ID=your_netsuite_client_id
# NETSUTE_CLIENT_SECRET=your_netsuite_client_secret
# NETSUTE_ACCOUNT_ID=your_netsuite_account_id 