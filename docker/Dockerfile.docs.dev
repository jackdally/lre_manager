FROM node:18-alpine

WORKDIR /app

# Install development dependencies
COPY lre-docs/package*.json ./
RUN npm install

# Copy source code (node_modules will be overridden by volume mount)
COPY lre-docs/ ./

# Expose port for the development server
EXPOSE 3000

# Start the development server with hot-reloading
CMD ["npm", "start", "--", "--host", "0.0.0.0"] 